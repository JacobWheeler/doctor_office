<h1>Patient: <%= @patient.name %> </h1>


<% if @patient.doctors.any? %>
    <h5> Doctors </h5>
    <ul>
        <% @patient.appointments.each do |appointment| %>
          <li>
            <%= appointment.patient.name %> -
            <%= link_to 'Remove', appointment_path(appointment), method: :delete, data: {confirm: 'Really remove this appointmen?'} %>
          </li>
        <% end %>
    </ul>
<% else %>
  <h5>No Appointments Found</h5>
<% end %>

<%= link_to 'All Patients', patients_path %> |
<%= link_to 'Edit', edit_patient_path(@patient) %>
